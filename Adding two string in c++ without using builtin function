#include<iostream>
using namespace std;

string concat(string str1,string str2){
 string str;
 str=str1+str2;
 return(str);
}
int main()
{
 string string1,string2;
 cout<<"Enter the first String = ";
 cin>>string1;
 cout<<"Enter the second String = ";
 cin>>string2;
 cout<<"\n"<<"Resultant string = "<<concat(string1,string2);
 return(0);
}
OUTPUT:-

Enter the first String = india                                                                                                                           
Enter the second String = isbest                                                                                                                         
                                                                                                                                                         
Resultant string = indiaisbest   
